    "sass": "^1.55.0",
    "stylelint": "^14.13.0",
    "stylelint-config-prettier": "^9.0.3",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "yaml-loader": "^0.8.0"
